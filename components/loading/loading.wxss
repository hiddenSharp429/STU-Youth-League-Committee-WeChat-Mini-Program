.main {
  width: 100%;
  height: 340rpx;
  position: absolute;
  transform: translate(-50%, -50%);
  overflow: hidden;
}

@media (max-width: 1600rpx) {
  .main {
    transform: scale(0.75);
  }
}

@media (max-width: 600px) {
  .main {
    transform: scale(0.5);
  }
}

/**/
.bow {
  position: absolute;
  top: 20%;
  left: 20%;
  width: 120rpx;
  height: 350rpx;
  margin-top: -88rpx;
  /* Half of the bow's height */
  margin-left: -260rpx;
  /* Half of the bow's width */
  animation: bow 8s infinite;
}

.bow__base {
  position: absolute;
  top: calc(50% - 430rpx);
  right: 100%;
  width: 1600rpx;
  height: 500rpx;
  z-index: 100;
  border-radius: 70% 30% 30% 70%/50% 50% 50% 50%;
  border-top: 30rpx solid transparent;
  border-right: 30rpx solid #00BDAE;
  border-bottom: 30rpx solid transparent;
  border-left: 30rpx solid transparent;
  animation: bow-base 4s infinite;
}

.bow__base::before {
  content: "";
  position: absolute;
  top: calc(50% - 25px);
  right: -30rpx;
  width: 28rpx;
  height: 110rpx;
  background-image: linear-gradient(to bottom, #fffb03 30%, #F82B48 30%, #F82B48 70%, #0804f1 70%);
}

.rope {
  position: absolute;
  top: 0rpx;
  right: 230rpx;
  height: 40rpx;
}

.rope__top,
.rope__bottom {
  position: absolute;
  height: 180rpx;
  width: 14rpx;
  border-radius: 20rpx;
  background: #555468;
  animation: row-top 4s infinite linear, row-h 4s infinite linear;
}

.rope__bottom {
  bottom: 0%;
  animation: row-bottom 4s infinite linear, row-h 4s infinite linear;
}

.arrow {
  position: absolute;
  top: calc(50% - 22.5px);
  left: calc(50% - 175px);
  width: 400rpx;
  height: 90rpx;
  animation: arrow 8s infinite linear, arrow-s 8s infinite linear;
}

.arrow__line {
  position: absolute;
  width: 360rpx;
  height: 10rpx;
  top: calc(50% - 5rpx);
  left: calc(50% - -30rpx);
  z-index: 50;
  background: #555468;
  border-radius: 10rpx;
}

.arrow__head {
  position: absolute;
  top: 16rpx;
  right: -200rpx;
  width: 60rpx;
  height: 60rpx;
  z-index: 50;
  background-image: linear-gradient(-45deg, #FF6353 0%, #FF6353 50%, transparent 50%);
  transform: rotateZ(-45deg);
}

.arrow__top,
.arrow__bottom {
  position: absolute;
  left: 220rpx;
  width: 100rpx;
  height: 44rpx;
  background-image: linear-gradient(to right, #FF6353 0%, #FF6353 70%, #F82B48 70%);
  transform: skewX(30deg);
}

.arrow__bottom {
  bottom: 0;
  background-image: linear-gradient(to right, #00BDAE 0%, #00BDAE 70%, #2C6087 70%);
  transform: skewX(-30deg);
}

.line {
  position: absolute;
  left: 100%;
  top: 40%;
  width: 100rpx;
  height: 10rpx;
  background: #555468;
  animation: line 8s infinite linear;
}

.line-2 {
  top: 60%;
  animation-delay: 0.2s;
}

.wall {
  position: absolute;
  width: 8rpx;
  height: 400rpx;
  top: calc(50% - 100px);
  right: -10rpx;
  z-index: 50;
  background: #555468;
  animation: wall 8s infinite linear;
}

/**/
@keyframes wall {

  0%,
  41%,
  66%,
  57% {
    right: -20rpx;
  }

  42%,
  55% {
    right: 0rpx;
  }
}

@keyframes bow {

  0%,
  22%,
  100% {
    top: 240rpx;
    left: 690rpx;
  }

  30% {
    top: 240rpx;
    left: -50vw;
  }

  80% {
    top: 150vmax;
    left: 690rpx;
  }
}

@keyframes arrow {

  0%,
  100% {
    left: calc(50% - 350rpx);
    transform: rotateZ(0deg);
  }

  21% {
    left: calc(50% - 440rpx);
  }

  24%,
  79% {
    left: calc(100% - 700rpx);
    transform-origin: right;
    transform: rotateZ(0deg);
  }

  80%,
  82%,
  84% {
    transform-origin: right;
    transform: rotateZ(-5deg);
    left: calc(100% - 610rpx);
  }

  81%,
  83%,
  85% {
    transform-origin: right;
    transform: rotateZ(5deg);
    left: calc(100% - 610rpx);
  }

  86%,
  95% {
    transform-origin: right;
    transform: rotateZ(0deg);
    left: calc(100% - 610rpx);
  }
}

@keyframes arrow-s {

  0%,
  40%,
  42%,
  44%,
  46%,
  48%,
  60%,
  62%,
  64%,
  66%,
  68%,
  70% {
    top: calc(50% - 45rpx);
  }

  41%,
  43%,
  45%,
  47%,
  49%,
  61%,
  63%,
  65%,
  67%,
  69% {
    top: calc(50% - 36rpx);
  }
}

@keyframes row-h {

  0%,
  12.5%,
  44%,
  50% {
    height: 180rpx;
  }

  42.5% {
    height: 180rpx;
  }
}

@keyframes row-top {

  0%,
  50% {
    transform-origin: bottom;
    transform: rotateZ(0deg);
  }

  40%,
  42.5% {
    transform-origin: bottom;
    transform: rotateZ(-30deg);
  }

  47.5% {
    transform-origin: bottom;
    transform: rotateZ(15deg);
  }
}

@keyframes row-bottom {

  0%,
  50% {
    transform-origin: top;
    transform: rotateZ(0deg);
  }

  40%,
  42.5% {
    transform-origin: top;
    transform: rotateZ(30deg);
  }

  47.5% {
    transform-origin: top;
    transform: rotateZ(-15deg);
  }
}

@keyframes line {

  0%,
  25%,
  30.1%,
  35.1%,
  40.1%,
  45.1%,
  50.1%,
  55.1%,
  60.1%,
  65.1%,
  70.1%,
  75.1% {
    left: 100%;
  }

  30%,
  35%,
  40%,
  45%,
  50%,
  55%,
  60%,
  65%,
  70%,
  75% {
    left: -200rpx;
  }
}